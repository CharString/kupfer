if bld.env["RST2MAN"]:
	# generate man page from Quickstart.rst
	bld.new_task_gen(
		source = "Quickstart.rst",
		target = "kupfer.1",
		rule = 'rst2man ${SRC} > ${TGT}',
	)
	bld.add_group()
	# compress and install man page
	bld.new_task_gen(
		source = "kupfer.1",
		target = "kupfer.1.gz",
		rule = 'gzip -c ${SRC} > ${TGT}',
		install_path = "${MANDIR}/man1",
	)

